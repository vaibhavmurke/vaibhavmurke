#include <iostream>
using namespace std;
void floydpattern(int n)
{
    int count = 1;
    for (int row = 1; row <= n; row++)
    {
        for (int col = 1; col <= row; col++)
        {
            cout << count << " ";
            count++;
        }
        cout << endl;
    }
}
int main()
{
    floydpattern(6);
    return 0;
}
