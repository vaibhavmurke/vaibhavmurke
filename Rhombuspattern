#include <iostream>
using namespace std;
void Rhombuspattern(int n)
{
    for (int row = 1; row <= n; row++)
    {
        for (int col = 1; col <= (n - row); col++)
        {
            cout << " ";
        }
        for (int col = 1; col <= n; col++)
        {
            cout << "* ";
        }
        cout << endl;
    }
}
int main()
{
    Rhombuspattern(6);
    return 0;
}
